<script>
    document.addEventListener('DOMContentLoaded', function() {
    const textWrapper = document.querySelector('.ml12');
    const letters = textWrapper.querySelectorAll('.letter');
    const totalLetters = letters.length;
    let isReappearing = false;

    function animateLetters() {
        if (!isReappearing) {
            // Disappearing animation
            letters.forEach((letter, index) => {
                setTimeout(() => {
                    letter.classList.add('disappear');
                    letter.classList.remove('reappear');
                }, index * 50); // Decreased delay per letter to 50ms
            });

            // Wait for all letters to disappear, then toggle
            setTimeout(() => {
                isReappearing = true;
                animateLetters();
            }, totalLetters * 50 + 200); // Decreased pause to 200ms
        } else {
            // Reappearing animation
            letters.forEach((letter, index) => {
                setTimeout(() => {
                    letter.classList.remove('disappear');
                    letter.classList.add('reappear');
                }, index * 50); // Decreased delay per letter to 50ms
            });
            
            // Wait for all letters to reappear, then reset
            setTimeout(() => {
                isReappearing = false;
                animateLetters();
            }, totalLetters * 50 + 200);
        }
    }

    // Start the animation loop
    animateLetters();
});
</script>